<% provide(:title, "自治体情報編集") %>
<h1><%= @hvalue[:N03_004] %>の情報編集</h1>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-md-offset-3">
      <%= form_for @hvalue, url: {:action => 'update'}, html: {class: "form-horizontal center"} do |f| %>
        <div class="form-group form-group-sm">
          <%= f.label "自治体名(固定)", {class: 'col-sm-6 control-label'} %>
          <div class="col-sm-6">
            <%= f.select :N03_004, [@hvalue[:N03_004]], {:selected => @hvalue[:N03_004]}, {:class => "form-control"} %>
          </div>
        </div>

        <% @column.each do |i| %>
          <div class="form-group form-group-sm">
            <%= f.label "サービス名: #{i}", {class: 'col-sm-6 control-label'}%>
            <div class="col-sm-6">
              <%= f.select i, @value, {:selected => @hvalue[i]}, {class: "form-control"} %>
            </div>
          </div>
        <% end %>

        <%= f.submit "Save changes", class: "btn btn-primary pull-right" %>
      <% end %>
    </div>
  </div>
</div>